---
import RequestTicketModal from '@/react-components/RequestTicketModal';
---

<nav id="navbar" class="fixed top-0 left-0 right-0 z-50 bg-white shadow-md transition-transform duration-300 transform translate-y-0 flex items-center justify-between w-full p-5">
  <!-- Left: Logo -->
  <div class="ml-10">
    <a href="/" class="text-3xl font-semibold text-gray-800">ChatDesk</a>
  </div>

  <!-- Right: Links + Button -->
  <div class="flex items-center gap-6 mr-10">
    <a href="/blogs/" class="hover:underline transition duration-300">Blog</a>
    <a href="/reviews/" class="hover:underline transition duration-300">Reviews</a>
    <RequestTicketModal client:load />
  </div>

  <script>
    let lastScrollY = window.scrollY;
    const navbar = document.getElementById('navbar');

    window.addEventListener('scroll', () => {
      const currentScrollY = window.scrollY;

      if (currentScrollY > lastScrollY && currentScrollY > 50) {
        navbar.classList.remove('translate-y-0');
        navbar.classList.add('-translate-y-full');
      } else {
        navbar.classList.remove('-translate-y-full');
        navbar.classList.add('translate-y-0');
      }

      lastScrollY = currentScrollY;
    });
  </script>
</nav>