---
import SlaReport from "@/react-components/SlaReport.tsx";
import "@/styles/global.css"; // Tailwind styles
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>SLA Report</title>
  </head>
  <body class="bg-white text-gray-900 min-h-screen font-sans">
    <main class="max-w-6xl mx-auto p-10 mt-10 shadow-lg bg-white rounded-[30px]">
      <section class="mb-6">
        <!-- Page Title -->
        <h1 class="text-3xl font-bold text-center mb-6">SLA Report</h1>

        <!-- SLA Report Section with Tables (no border) -->
        <div class="bg-white p-6 rounded-xl shadow">
          <SlaReport client:visible />
        </div>
      </section>
    </main>
  </body>
</html>
